<header>
    <h1>Login</h1>
</header>

<main>
    <section>
        <h3>Login</h3>
        <form action="/api/sessions/login" method="post" style="display: flex; flex-direction: column; gap: 0.5rem">
            <div>
                <label for="email">Email</label>
                <input type="text" name="email" id="email">
            </div>
            <div>
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password">
            </div>

            <div style="margin-top: 1rem;">
                <a href="/"><input type="button" value="Volver al Inicio"></a>
                <input type="submit" value="Ingresar">
                <a href="/reset-password"><input type="button" value="Restaurar Contraseña"></a>
            </div>
        </form>
    </section>
</main>